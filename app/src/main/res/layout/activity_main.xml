<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical"
    android:weightSum="9">


    <HorizontalScrollView
        android:id="@+id/horizontal_view_txtExpression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:scrollbars="none"
        >

        <TextView


            android:id="@+id/txtExpression"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:scrollHorizontally="true"
            android:textAlignment="viewEnd"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="45sp"
            android:layout_gravity="end"
            android:singleLine="true"

            >

        </TextView>
    </HorizontalScrollView>

    <TextView

        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:lines="1"
        android:textColor="#7B7878"
        android:textSize="30sp"

        >

    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="15dp"
        android:background="@color/light_gray">

    </View>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:layout_weight="5.50"
        android:weightSum="5">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btnAC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:text="AC"
                android:textColor="@color/orange"
                android:textSize="@dimen/button_text_size_small">

            </Button>

            <Button
                android:id="@+id/btnopenParantesis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:text="("
                android:textColor="@color/orange"
                android:textSize="@dimen/button_text_size_small">

            </Button>

            <Button
                android:id="@+id/btncloseParantesis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:text=")"
                android:textColor="@color/orange"
                android:textSize="@dimen/button_text_size_small">

            </Button>

            <Button

                android:id="@+id/btndivid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:text="/"
                android:textColor="@color/orange"
                android:textSize="@dimen/button_text_size_larg">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size_larg">

            </Button>

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:layoutDirection="rtl"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size_larg">

            </Button>

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size_larg">

            </Button>


            <Button
                android:id="@+id/btnStar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:text="*"
                android:textColor="@color/orange"
                android:textSize="38sp">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size_larg">

            </Button>

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:layoutDirection="rtl"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size_larg">

            </Button>

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size_larg">

            </Button>

            <Button
                android:id="@+id/btnMines"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:text="-"
                android:textColor="@color/orange"
                android:textSize="@dimen/button_text_size_larg">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size_larg">

            </Button>

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:layoutDirection="rtl"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size_larg">

            </Button>

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size_larg">

            </Button>

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:text="+"
                android:textColor="@color/orange"
                android:textSize="@dimen/button_text_size_larg">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:layoutDirection="rtl"
                android:text=">"
                android:textColor="@color/orange"
                android:textSize="@dimen/button_text_size_larg">

            </Button>

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:layoutDirection="rtl"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size_larg">

            </Button>

            <Button
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:text="."
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size_larg">

            </Button>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                >

                <TextView
                    android:id="@+id/btnEquals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_circle"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="="
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/button_text_size_larg">

                </TextView>

            </FrameLayout>
        </TableRow>


    </TableLayout>

</LinearLayout>